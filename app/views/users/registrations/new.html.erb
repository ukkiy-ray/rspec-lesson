<div class="container user-form">
  <!-- Content here -->
  
  <div class="card text-center shadow-2-strong">
    <div class="card-header">ユーザー新規登録</div>
    <div class="card-body">
      <h5 class="card-title">Sign up</h5>
      <div>
        <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
        
        <%= render "users/shared/error_messages", resource: resource %>
        <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.text_field :nickname, class:"form-control", id:"form1Example1", maxlength:"40", autofocus: true %>
            <label class="form-label" for="form1Example1">Nickname</label>
          </div>
          <div class="form-outline mb-4">
            <%= f.email_field :email, class:"form-control", id:"form1Example2", autocomplete: "email" %>
            <label class="form-label" for="form1Example2">Email address</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <%= f.password_field :password, class:"form-control", id:"form1Example3", placeholder:"6文字以上の半角英数字" %>
            <label class="form-label" for="form1Example3">Password</label>
          </div>

          <div class="form-outline mb-4">
            <%= f.password_field :password_confirmation, class:"form-control", id:"form1Example4", placeholder:"同じパスワードを入力して下さい" %>
            <label class="form-label" for="form1Example4">Password confirmation</label>
          </div>

          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text" for="birth-date">Birthday</label>
            </div>
            <div class='input-birth-wrap'>
              <%= raw sprintf(
                          f.date_select(
                            :birthday,
                            class:'select-birth',
                            id:"birth-date",
                            use_month_numbers: true,
                            prompt:'--',
                            start_year: 1930,
                            end_year: (Time.now.year - 5),
                            date_separator: '%s'),
                          "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
            </div>
          </div>

          <!-- Submit button -->
          <%= f.submit "Sign up", class:"btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
    <div class="card-footer text-muted">既にアカウントをお持ちの方はこちら→<%= render "users/shared/links" %></div>
  </div>
</div>





